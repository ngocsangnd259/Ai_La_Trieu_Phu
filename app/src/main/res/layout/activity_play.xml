                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/txt_money"
                android:src="@drawable/atp__activity_profile_icon_money" />
        </RelativeLayout>

